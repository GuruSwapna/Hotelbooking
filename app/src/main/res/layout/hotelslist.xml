<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true"
        app:cardBackgroundColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="150dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/address26"
                    android:layout_marginTop="10dp"
                    android:text="name"
                    android:textColor="#000"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp">

                    <ImageView
                        android:id="@+id/imageViewst1"
                        android:layout_width="12dp"

                        android:layout_height="wrap_content"
                        android:src="@drawable/star1" />

                    <ImageView
                        android:id="@+id/imageViewst2"
                        android:layout_width="12dp"

                        android:layout_height="wrap_content"
                        android:src="@drawable/star1" />

                    <ImageView
                        android:id="@+id/imageViewst3"
                        android:layout_width="12dp"
                        android:layout_height="wrap_content"

                        android:src="@drawable/star1" />

                    <ImageView
                        android:id="@+id/imageViewst4"
                        android:layout_width="12dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star1"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/imageViewst5"
                        android:layout_width="12dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star1"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/rat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000" />

                    <ImageView
                        android:id="@+id/imageViewst6"
                        android:layout_width="15dp"

                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_place_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5km from center"
                        android:textColor="#5f5f5f"
                        android:textSize="10sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#afafaf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/smimg"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/smily" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="vertical"
                                >
                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:textSize="12dp"
                                android:text="78/100"
                                android:textColor="#000" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:textSize="12dp"
                                android:text="450 reviews"
                                android:textColor="#5f5f5f" />
                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:id="@+id/vw1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#afafaf" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                        <TextView
                            android:id="@+id/txdata"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="View all deals"
                            android:textColor="#000"
                            android:textSize="12sp"
                            />
                            <TextView
                                android:id="@+id/txdata1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="from 1 website"
                                android:textColor="#5f5f5f"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/vw2"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#afafaf" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/address27"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"

                            android:text="Price"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/address26"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Address"
                            android:textColor="#000"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/imdl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#006400"
                            android:text="View Deal"
                            android:textColor="#000" />

                    </LinearLayout>
                </LinearLayout>


                <!--<TextView-->
                <!--android:id="@+id/address26"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="addrss"-->
                <!--android:textColor="#000"-->
                <!--android:layout_marginTop="10dp"-->
                <!--/>-->

                <!--<TextView-->
                <!--android:id="@+id/address27"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="10dp"-->

                <!--android:text="Price"-->
                <!--android:textColor="#000"-->
                <!--/>-->


            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>