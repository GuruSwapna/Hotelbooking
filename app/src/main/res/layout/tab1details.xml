<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/hoteld"
    tools:context="com.example.enchanterswapna.hotelbooking.Holldetails$PlaceholderFragment">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/htimg"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txname"
        android:text="Name"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txadd"
        android:textSize="18sp"
        android:text="Address"
        android:layout_marginTop="15dp"
        android:textColor="#000"
        android:layout_below="@+id/txname"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txdesc"
        android:textSize="15sp"
        android:textColor="#000"
        android:text="Description"

        android:layout_marginTop="11dp"
        android:layout_below="@+id/txadd"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book room"
        android:id="@+id/btnroom"
        android:gravity="center"
        android:textColor="#000"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/txdesc"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
